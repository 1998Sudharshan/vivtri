void initialize(char name[])
{
    int count =0;
    purchase();
}

void purchase()
{
    if(count == 0)
    {
        int choice;
        cont ='y'
        while(cont == 'y')
        {
           cout<<"\nEnter 0 to exit & 1 to purchase:";
           cin>>choice;
           if(choice == 1)
           {

             int n;
             cout<<"Enter number of items you want to purchase:";
             cin>>n;
             char sel_items[n];
             int qty[n],price[n];
             list();
             cout<<"Enter items that you want to purchase and quantity of that corresponding item:";
             for(int i=0;i<n;i++)
             {
               cin>>sel_items[i];
               cin>>qty[i];
               cin>>price[i]
             }

             select(sel_items,n);
             count = count+1;
             cout<<"Want to continue(y/n):";
             cin>>cont;

         }

         else if(choice == 0)
         {
            cout<<"Thanks for visiting! You're always welcomed";
         }

    }

}

void select(char sel_items[], int n)
{
    cout<<"Items purchased and total:";
    for(int i=0;i<n;i++)
    {

        cout<<"Name:"<<sel_items[i]<<"Purchased Qty:"<<qty[i]<<"Price of product:"<<price[i];
        cout<<"\n";
    }

    cout<<"Total amount:"<<calculation.price_cal_with_qty(sel_items);

}


